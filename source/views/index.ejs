<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Temas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 text-slate-900">
  <header class="border-b bg-white">
    <div class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
      <h1 class="text-2xl font-bold">Temas</h1>
      <a href="/" class="text-sm text-slate-600 hover:text-slate-900">Home</a>
    </div>
  </header>

  <main class="max-w-5xl mx-auto px-4 py-6 space-y-6">

    <% if (message) { %>
      <div class="rounded-md bg-green-50 border border-green-200 p-3 text-green-800">
        <%= message %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="rounded-md bg-red-50 border border-red-200 p-3 text-red-800">
        <%= error %>
      </div>
    <% } %>

    <section class="bg-white border border-slate-200 rounded-xl shadow-sm p-4">
      <h2 class="text-lg font-semibold mb-3">Crear nuevo tema</h2>
      <form action="/topics" method="post" class="grid gap-3 sm:grid-cols-2">
        <input name="titulo" placeholder="Título" required
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <input name="autor" placeholder="Autor (opcional)"
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <div class="sm:col-span-2">
          <input name="descripcion" placeholder="Descripción"
                 class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        </div>
        <div class="sm:col-span-2 flex justify-end">
          <button class="inline-flex items-center gap-2 rounded-lg bg-slate-900 text-white px-4 py-2 hover:bg-slate-800">
            Crear
          </button>
        </div>
      </form>
    </section> 

    <section class="space-y-3" id="topicsContainer">
      <% topics.forEach(t => { %>
        <article class="bg-white border border-slate-200 rounded-xl shadow-sm p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3"
                 data-topic="<%= t.id %>">
          <div>
            <a href="/topics/<%= t.id %>" class="text-lg font-semibold hover:underline">
              #<%= t.id %> <%= t.titulo %>
            </a>
            <div class="text-sm text-slate-600">
              por <span class="font-medium"><%= t.autor %></span>
            </div>
            <% if (t.descripcion) { %>
              <p class="text-slate-700 mt-1"><%= t.descripcion %></p>
            <% } %>
          </div>

          <div class="flex items-center gap-2">
            <span class="inline-flex items-center rounded-full border px-2 py-1 text-sm">
              votos: <span class="ml-1 font-semibold" data-score><%= t.votes %></span>
            </span>

            <form action="/topics/<%= t.id %>/vote" method="post">
              <button data-vote="<%= t.id %>"
                      class="rounded-lg border px-3 py-1.5 text-sm hover:bg-slate-50">
                Votar / Quitar
              </button>
            </form>

            <a href="/topics/<%= t.id %>/edit"
               class="rounded-lg border px-3 py-1.5 text-sm hover:bg-slate-50">Editar</a>

            <form action="/topics/<%= t.id %>?_method=DELETE" method="post"
                  onsubmit="return confirm('¿Eliminar este tema?');">
              <button class="rounded-lg border px-3 py-1.5 text-sm text-red-700 hover:bg-red-50">
                Eliminar
              </button>
            </form>
          </div>
        </article>
      <% }) %>
    </section>
  </main> 

  <script>

  function reorderTopics() {
    const container = document.getElementById('topicsContainer');
    const items = Array.from(container.children);

    items.sort((a, b) => {
      const votesA = parseInt(a.querySelector('[data-score]').textContent || '0');
      const votesB = parseInt(b.querySelector('[data-score]').textContent || '0');

      // Mayor voto primero
      if (votesB !== votesA) {
        return votesB - votesA;
      }
      
      // ID mas alto primero en caso de empate
      const idA = parseInt(a.getAttribute('data-topic'));
      const idB = parseInt(b.getAttribute('data-topic'));
      return idB - idA;
    });

    // Reinsertar en el nuevo orden
    items.forEach(item => container.appendChild(item));
  }

  document.addEventListener('click', async (e) => {
    const btn = e.target.closest('[data-vote]');
    if (!btn) return;
    e.preventDefault();

    const id = btn.getAttribute('data-vote');
    try {
      const resp = await fetch(`/topics/${id}/vote`, {
        method: 'POST',
        headers: { 'Accept': 'application/json' }
      });
      const data = await resp.json();
      if (data && data.ok) {
        // Actualizar numero visual
        const li = document.querySelector(`[data-topic="${id}"]`);
        li.querySelector('[data-score]').textContent = String(data.votes);
        
        // Reordenar la lista
        reorderTopics();
      }
    } catch (err) {
      console.error('Error votando:', err);
    }
  });
  </script>
</body>
</html>