<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Tema #<%= topic.id %> — <%= topic.titulo %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 text-slate-900">
  <header class="border-b bg-white">
    <div class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
      <a href="/" class="text-sm text-slate-600 hover:text-slate-900">← Volver</a>
      <div class="text-sm text-slate-500">Tema #<%= topic.id %></div>
    </div>
  </header>

  <main class="max-w-5xl mx-auto px-4 py-6 space-y-6" data-topic-id="<%= topic.id %>">
    <section class="bg-white border border-slate-200 rounded-xl shadow-sm p-5">
      <h1 class="text-2xl font-bold"><%= topic.titulo %></h1>
      <p class="text-slate-700 mt-2"><%= topic.descripcion %></p>
      <div class="mt-3 text-sm text-slate-600">
        por <span class="font-medium"><%= topic.autor %></span>
        · votos: <span class="font-semibold"><%= topic.votes %></span>
      </div>
    </section>

    <section class="bg-white border border-slate-200 rounded-xl shadow-sm p-5">
      <h2 class="text-lg font-semibold mb-3">Añadir enlace</h2>
      <form action="/topics/<%= topic.id %>/links" method="post" class="grid gap-3 sm:grid-cols-2">
        <input name="title" placeholder="Título del enlace" required
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <input name="url" placeholder="URL" required
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <input name="author" placeholder="Autor (opcional)"
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <input name="description" placeholder="Descripción (opcional)"
               class="w-full rounded-lg border-slate-300 focus:border-slate-400 focus:ring-slate-200"/>
        <div class="sm:col-span-2 flex justify-end">
          <button class="inline-flex items-center gap-2 rounded-lg bg-slate-900 text-white px-4 py-2 hover:bg-slate-800">
            Agregar
          </button>
        </div>
      </form>
    </section>

    <section class="space-y-3" id="linksContainer">
      <% topic.links.forEach(link => { %>
        <article class="bg-white border border-slate-200 rounded-xl shadow-sm p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3"
                 data-link="<%= link.id %>">
          <div>
            <a href="<%= link.url %>" target="_blank" class="text-lg font-semibold text-slate-900 hover:underline">
              <%= link.title %>
            </a>
            <div class="text-sm text-slate-600">
              por <span class="font-medium"><%= link.author %></span>
            </div>
            <% if (link.description) { %>
              <p class="text-slate-700 mt-1"><%= link.description %></p>
            <% } %>
          </div>

          <div class="flex items-center gap-2">
            <span class="inline-flex items-center rounded-full border px-2 py-1 text-sm">
              votos: <span class="ml-1 font-semibold" data-score><%= link.votes %></span>
            </span>
            <form action="/topics/<%= topic.id %>/links/<%= link.id %>/vote" method="post">
              <button data-vote-link="<%= link.id %>"
                      class="rounded-lg border px-3 py-1.5 text-sm hover:bg-slate-50">
                Votar / Quitar
              </button>
            </form>
            <a href="/topics/<%= topic.id %>/links/<%= link.id %>/edit"
               class="rounded-lg border px-3 py-1.5 text-sm hover:bg-slate-50">Editar</a>
            <form action="/topics/<%= topic.id %>/links/<%= link.id %>?_method=DELETE" method="post"
                  onsubmit="return confirm('¿Eliminar este enlace?');">
              <button class="rounded-lg border px-3 py-1.5 text-sm text-red-700 hover:bg-red-50">
                Eliminar
              </button>
            </form>
          </div>
        </article>
      <% }) %>
    </section>
  </main>

  <script>
  const root = document.querySelector('main[data-topic-id]');
  const topicId = Number(root?.dataset.topicId);

  function reorderLinks() {
    const container = document.getElementById('linksContainer');
    const items = Array.from(container.children);

    items.sort((a, b) => {
      const votesA = parseInt(a.querySelector('[data-score]').textContent || '0');
      const votesB = parseInt(b.querySelector('[data-score]').textContent || '0');

      // Mayor voto primero
      if (votesB !== votesA) return votesB - votesA;

      // ID mas alto primero en caso de empate
      const idA = parseInt(a.getAttribute('data-link'));
      const idB = parseInt(b.getAttribute('data-link'));
      return idB - idA;
    });

    items.forEach(item => container.appendChild(item));
  }

  // Voto de enlaces
  document.addEventListener('click', async (e) => {
    const btn = e.target.closest('[data-vote-link]');
    if (!btn) return;
    e.preventDefault();

    const linkId = btn.getAttribute('data-vote-link');
    try {
      const resp = await fetch(`/topics/${topicId}/links/${linkId}/vote`, {
        method: 'POST',
        headers: { 'Accept': 'application/json' }
      });
      const data = await resp.json();
      if (data && data.ok) {
       
        const card = document.querySelector(`[data-link="${linkId}"]`);
        card.querySelector('[data-score]').textContent = String(data.votes);

        // Reordenar la lista
        reorderLinks();
      }
    } catch (err) {
      console.error('Error votando enlace:', err);
    }
  });
  </script>
</body>
</html>